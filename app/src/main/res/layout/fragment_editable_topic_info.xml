<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/editable_topic_LAY_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:strokeColor="@color/electric_cyan"
        app:strokeWidth="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/deep_azure"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/topic_info_LBL_topic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:text="Title"
                    android:textSize="@dimen/label_prefix_size"
                    android:textStyle="bold"
                    android:layout_weight="9"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/editable_topic_info_IMG_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:srcCompat="@drawable/ic_delete"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/topic_info_CHIP_data_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="primitive.int"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/pink"
                    app:chipStrokeColor="@color/light_purple"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/topic_info_CHIP_commands_processor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/pink"
                    android:clickable="false"
                    android:text="Commands processor"
                    android:textColor="@color/white"
                    app:chipStrokeColor="@color/light_purple"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/topic_info_CHIP_data_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/pink"
                    android:clickable="false"
                    android:text="Data Provider"
                    android:textColor="@color/white"
                    app:chipStrokeColor="@color/light_purple"
                    app:chipStrokeWidth="1dp" />
            </com.google.android.material.chip.ChipGroup>


        </androidx.appcompat.widget.LinearLayoutCompat>
        app:srcCompat="@drawable/ic_delete" />
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>