<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:strokeColor="@color/electric_cyan"
        app:strokeWidth="1.5dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sky_blue"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/data_request_component_LBL_header"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:gravity="start|center"
                android:text="Example"
                android:textSize="@dimen/label_prefix_size" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/data_request_component_BTN_refresh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:scaleX="0.45"
                android:scaleY="0.45"
                app:srcCompat="@drawable/ic_refresh_icon" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <View
        android:id="@+id/draggable_VIEW_drag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:elevation="1dp" />

</RelativeLayout>